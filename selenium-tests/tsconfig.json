{
  "compilerOptions": {
    "target": "ES2020",             // Works well with async/await
    "module": "commonjs",           // Node-friendly modules
    "strict": true,                 
    "esModuleInterop": true,        // Allows default imports for selenium-webdriver
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"]               // Include Node types
  }
}